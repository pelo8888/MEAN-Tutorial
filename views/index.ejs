<html>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <head>
    <title>The game of Drones</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <script src="javascripts/factories/authFactory.js"></script>
    <script src="javascripts/factories/postsFactory.js"></script>
    <script src="javascripts/factories/playersFactory.js"></script>
    <script src="javascripts/factories/gameFactory.js"></script>
    <script src="javascripts/controllers/mainCtrl.js"></script>
    <script src="javascripts/controllers/postsCtrl.js"></script>
    <script src="javascripts/controllers/authCtrl.js"></script>
    <script src="javascripts/controllers/navCtrl.js"></script>
    <script src="javascripts/controllers/gameCtrl.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>
  <body ng-app="gameOfDrones">
    <nav class="navbar navbar-default" ng-controller="NavCtrl">
      <ul class="nav navbar-nav pull-right">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>
    <!-- TEMPLATES -->
    <script type="text/ng-template" id="/start.html">
    <div class="page-header">
      <h1>The Game of Drones</h1>
    </div>
    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>
    <form ng-submit="start()" class="form-horizontal"
      style="margin-top:30px;">
      <h3>Enter players names</h3>
      <div class="form-group">
        <label for="player1username" class="col-sm-2 control-label">Player 1</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="player1username" placeholder="Username 1"
          ng-model="username1"></input>
        </div>
      </div>
      <div class="form-group">
        <label for="player2username" class="col-sm-2 control-label">Player 2</label>
        <div class="col-sm-10">
          <input type="text" id="player2username"
          class="form-control"
          placeholder="Username 2"
          ng-model="username2"></input>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <button type="submit" class="btn btn-primary btn-block">Start</button>
      </div>
    </form>
    <p>{{Game.Player1.username}}</p>
    <p>{{Game.Player2.username}}</p>
    </script>

    <script type="text/ng-template" id="/winner.html">
    <div class="page-header">
      <h1>We have a WINNER!!</h1>
      <h2>{{Winner.name}} is the new EMPEROR!</h2>
    </div>
    </script>

    <script type="text/ng-template" id="/playing.html">
    <div class="page-header">
      <h1>The game of Drones</h1>
    </div>
    <div class="row">
      <div class="col-md-6" style="border:1px solid #eee;border-radius:8px;">
        <h3>Round {{ Game.moves.length + 1}}</h3>
        <h3 ng-hide="lastMove.player1"> {{Game.Player1.username}}</h3>
        <h3 ng-show="lastMove.player1"> {{Game.Player2.username}}</h3>
        <form ng-submit="Attack()" style="margin-top:30px;">
          <div class="form-group">
            <label for="movementSelect">Select move</label>
          <select class="form-control" ng-options="item as item.name for item in options" ng-model="selected"></select>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">Attack</button>
        </div>
      </form>
    </div>
    <div class="col-md-6" style="border:1px solid #eee;border-radius:8px;">
      <h2>Score</h2>
      <div ng-repeat="move in Game.moves">
        <span style="font-size:20px;margin-left:10px">
          <span ng-hide="post.link">
            {{$index + 1}} - {{ move.player1.name }} vs {{ move.player2.name }}  -
          </span>
          <span ng-show="move.winner">
            Gano: {{move.winner.username}}
          </span>
          <span ng-hide="move.winner">
            Empate
          </span>
        </span>
      </div>
    </div>
  </div>
  </script>

  <script type="text/ng-template" id="/home.html">
  <div class="page-header">
    <h1>The game of Drones</h1>
  </div>
  <div ng-hide="isLoggedIn()">
    <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can play The game of drones.</h3>
  </div>
  </script>

  <script type="text/ng-template" id="/register.html">
  <div class="page-header">
    <h1>The Game of Drones</h1>
  </div>
  <div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
  </div>
  <form ng-submit="register()"
    style="margin-top:30px;">
    <h3>Register</h3>
    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Username"
      ng-model="user.username"></input>
    </div>
    <div class="form-group">
      <input type="password"
      class="form-control"
      placeholder="Password"
      ng-model="user.password"></input>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
  </script>

  <script type="text/ng-template" id="/login.html">
  <div class="page-header">
    <h1>The Game of Drones</h1>
  </div>
  <div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
  </div>
  <form ng-submit="logIn()"
    style="margin-top:30px;">
    <h3>Log In</h3>
    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Username"
      ng-model="user.username"></input>
    </div>
    <div class="form-group">
      <input type="password"
      class="form-control"
      placeholder="Password"
      ng-model="user.password"></input>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
  </script>

</body>
</html>
